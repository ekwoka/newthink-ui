{
  "name": "@newthink/ui",
  "version": "0.4.3",
  "description": "Simple Alpine Headless UI Components",
  "author": {
    "name": "Eric Kwoka",
    "email": "ninjatheory@gmail.com",
    "url": "https://thekwoka.net/"
  },
  "repository": "github:ekwoka/newthink-ui",
  "keywords": [
    "alpinejs",
    "headless",
    "components",
    "plugins"
  ],
  "license": "ISC",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "sideeffects": false,
  "scripts": {
    "build": "tsc",
    "coverage": "vitest run --coverage",
    "lint": "eslint --fix ./src; prettier --write ./src --loglevel error",
    "lint:check": "eslint --max-warnings 10 ./src && prettier --check ./src",
    "prebuild": "rm -rf dist",
    "prepare": "husky install",
    "size": "node scripts/esbuild.js",
    "test": "vitest"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/alpinejs": "3.13.11",
    "@types/alpinejs__focus": "3.13.4",
    "@types/node": "24.0.0",
    "@typescript-eslint/eslint-plugin": "6.7.4",
    "@typescript-eslint/parser": "6.7.4",
    "@vitest/coverage-c8": "0.33.0",
    "esbuild": "0.25.5",
    "eslint": "8.50.0",
    "eslint-plugin-filename-export": "1.0.4",
    "husky": "8.0.3",
    "lint-staged": "16.1.0",
    "prettier": "3.5.3",
    "pretty-bytes": "7.0.0",
    "typescript": "5.8.3",
    "vite": "6.3.5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "peerDependencies": {
    "@alpinejs/focus": "^3.10.0",
    "alpinejs": "^3.10.0"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSameLine": true,
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "importOrder": [
      "node:.*",
      "@/lib(.*)$",
      "@/utils(.*)$",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "*.{js,ts,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "overrides": {
      "typescript@<5.1.6": "^5.1.6"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
